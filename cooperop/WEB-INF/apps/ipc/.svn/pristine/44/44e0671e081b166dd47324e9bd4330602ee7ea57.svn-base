
*{
    margin:0;
    padding:0;
}

.content{
    margin: 0 !important;
    width: 500px;
    height: 393px;
    border: 1px solid #eee;
    position:  relative;
}

.content .main{
    position:  absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 40px;
    overflow:  auto;
    padding: 10px;
    border-bottom:  1px solid #eee;
}

.content .main .list{

}

.content .main .list .title{
    line-height:  30px;
    font-weight: 600;
}

.content .main .list>form{

}

.content .main .list>form>div{
    line-height:  25px;
    text-indent:  1em;
}

.content .main .list>form>div:hover{
    cursor: pointer;
}

.content .main .list>form>div>input{

}

.content .main .list>form>div>span{

}

.content .main .list .optionText{
    text-indent:  1em;
    line-height:  25px;
}

.content .main .list .optionText>span{

}

.content .main .list .optionText>input{
    outline:  none;
    border: none;
    border-bottom:  1px solid #666;
    padding: 0 10px;
    width: 200px;
    background-color: #f4f4f4;
}

.content>button{
    position:  absolute;
    bottom: 5px;
    right: 20px;
    width: 80px;
    height: 30px;
    border: 1px solid #00bcd4;
    background-color: #00BCD4;
    color:  #fff;
    cursor: pointer;
}

.content>button:hover{
    background-color: #07a3d4;
    border: 1px solid #07a3d4;
}


::-webkit-scrollbar
{
    width: 2px;
    height: 4px;
    background-color: #F5F5F5;
}

